<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ConstraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".create_test_fragment">


    <TextView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CREATE NEW TEST"
        android:textColor="@color/colorPrimary"
        android:padding="20dp"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_below="@+id/header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="ADD A TEST TITLE" />

    <Switch
        android:id="@+id/publicSwitch"
        android:layout_width="wrap_content"
        android:layout_margin="20dp"
        android:layout_below="@id/header"
        android:layout_alignParentRight="true"
        android:gravity="end"
        android:layout_height="wrap_content"
        android:text="Public" />


    <EditText
        android:id="@+id/testTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:ems="10"
        android:hint="Test Title..."
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/testTitle"
        android:layout_margin="20dp"
        android:text="ADD DESCRIPTION TO TEST" />

    <EditText
        android:id="@+id/testDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView4"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="20dp"
        android:ems="10"
        android:hint="Test Description..."
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/addTestImageText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ADD TEST IMAGE"
        android:background="@color/colorPrimary"
        android:textColor="@android:color/white"
        android:padding="20dp"
        android:layout_below="@+id/testDescription"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"/>

    <Button
        android:id="@+id/addImageBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/testDescription"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="40dp"
        android:text="ADD IMAGE" />

    <ImageView
        android:id="@+id/coverImage"
        android:layout_width="180dp"
        android:layout_height="85dp"
        android:layout_below="@+id/testDescription"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="20dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher_background"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/coverImage"
        android:layout_margin="20dp"
        android:text="ADD QUESTION TO TEST" />

    <Button
        android:id="@+id/addQuestionBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView6"
        android:layout_marginStart="20dp"
        android:text="ADD QUESTION" />


    <Button
        android:id="@+id/viewQuestionsBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView6"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="20dp"
        android:text="View Questions" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabCreateTest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        android:src="@drawable/ic_check" />
</RelativeLayout>